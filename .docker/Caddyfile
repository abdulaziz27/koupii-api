{
  admin off
  auto_https off
}

# Health check endpoint
:80/health {
  respond "OK" 200
}

# Main application
:80 {
  root * /app/public

  # Handle all requests with PHP
  handle {
    php_server
  }

  # Serve static files
  handle {
    file_server
  }

  # Enable compression
  encode zstd br gzip

  # Logging
  log {
    output file /app/storage/logs/frankenphp.access.log
    format json
  }
}
